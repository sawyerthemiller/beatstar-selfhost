generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/beatstar"
}

model User {
  id                   Int           @id @default(autoincrement())
  uuid                 String        @unique @db.Uuid
  username             String        @unique
  password             String
  admin                Boolean       @default(false)
  starCount            Int           @default(0)
  customStarCount      Int           @default(0)
  selectedBeatmapId    Int           @default(3006)
  sessionId            String?       @unique @db.Char(36)
  unlockAllSongs       Boolean       @default(true)
  perfectPlusHighlight Boolean       @default(false)
  accuracyText         Boolean       @default(false)
  autoShuffle          Boolean       @default(false)
  selectedBeatmap      Beatmap       @relation(fields: [selectedBeatmapId], references: [id])
  Score                Score[]
  CustomScore          CustomScore[]
}

model Score {
  beatmapId         Int
  normalizedScore   Float?
  absoluteScore     Int
  highestGrade      Int?
  highestCheckpoint Int?
  highestStreak     Int?
  playedCount       Int?

  user    User    @relation(fields: [userId], references: [id])
  userId  Int
  beatmap Beatmap @relation(fields: [beatmapId], references: [id])

  @@id([userId, beatmapId])
}

model CustomScore {
  beatmapId         Int
  normalizedScore   Float?
  absoluteScore     Int
  highestGrade      Int?
  highestCheckpoint Int?
  highestStreak     Int?
  playedCount       Int?

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@id([userId, beatmapId])
}

model Beatmap {
  id         Int     @id
  idLabel    String
  difficulty Int
  deluxe     Boolean

  User  User[]
  Score Score[]
}

model Cms {
  name String @id
  data Json
  gzip Bytes
  hash String @db.Char(32)
}

model News {
  type           Int
  legacyId       Int
  viewType       NewsType
  startTimeMsecs DateTime
  endTimeMsecs   DateTime
  order          Int
  image          Image    @relation(fields: [imageId], references: [id])
  title          String
  status         Int
  id             String   @id @db.Char(32)
  content        String
  requirements   String?
  imageId        String   @db.Uuid
}

model Image {
  id         String @unique @db.Uuid
  url        String
  width      Int
  height     Int
  rectWidth  Int
  rectHeight Int
  News       News[]
}

enum NewsType {
  TEXT
}
